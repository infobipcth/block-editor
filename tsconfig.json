{
    "compilerOptions": {
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "module": "esnext",
        "target": "es2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "jsx": "react",
        "jsxFactory": "createElement",
        "skipLibCheck": true,
        "typeRoots": [ "./node_modules/@types", "../node_modules/@types", "../../node_modules/@types" ],
        "types": ["node"]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./dist"
    ]
}
